<mvc:View
	height="100%"
	controllerName="sap.m.sample.ComboBox.controller.ComboBox"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page showHeader="false" class="sapUiContentPadding">
		<content>
			<ComboBox
				items="{
					path: 'comboData>/items'
					sorter: { 'comboData>listorder' }
				}">
				<core:Item ey="{comboData>key}" text="{comboData>text}" />
			</ComboBox>
		</content>
	</Page>
</mvc:View>
